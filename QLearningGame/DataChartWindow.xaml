<Window x:Class="QLearningGame.DataChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLearningGame"
        xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="DataChartWindow" Height="520" Width="900"
        WindowStyle="None">
    
    <Grid Height="500" Width="900">
        <Label HorizontalAlignment="Center" Margin="0 5 0 0" FontSize="20">
            <Bold>Data Visualization</Bold>
        </Label>
        <wpf:CartesianChart Series="{Binding DataSeries}"/>
    </Grid>
</Window>
